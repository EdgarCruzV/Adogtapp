<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/grey"
        tools:context=".model.Contacto.Informacion_Fragment">


    <ImageButton
            app:layout_constraintTop_toBottomOf="@id/textView"
            android:layout_marginTop="50dp"
            android:background="@color/grey"
            android:scaleType="fitCenter"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:id="@+id/facebook_imageButton"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="112dp"
            app:layout_constraintLeft_toRightOf="@+id/instagram_imageButton"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="@+id/instagram_imageButton"
            android:layout_marginEnd="112dp" app:layout_constraintVertical_bias="0.0"/>

    <ImageButton
            app:layout_constraintTop_toBottomOf="@id/infoHuellitas"
            android:layout_marginTop="8dp"
            android:background="@color/grey"
            android:scaleType="fitCenter"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:id="@+id/facebook_imageButton_huellitas"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="48dp"
            android:layout_marginEnd="48dp"
            app:layout_constraintStart_toEndOf="@+id/instagram_imageButton_huellitas" android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp" app:layout_constraintHorizontal_bias="0.571"/>

    <ImageButton
            android:scaleType="fitCenter"
            android:layout_marginTop="56dp"
            android:layout_marginRight="72dp"
            android:background="@color/grey"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:id="@+id/instagram_imageButton"
            app:layout_constraintTop_toBottomOf="@id/textView"
            app:layout_constraintRight_toLeftOf="@+id/facebook_imageButton"
    />

    <ImageButton
            android:scaleType="fitCenter"
            android:layout_marginTop="20dp"
            android:layout_marginRight="40dp"
            android:layout_marginLeft="20dp"
            android:background="@color/grey"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:id="@+id/instagram_imageButton_huellitas"
            app:layout_constraintTop_toBottomOf="@id/infoHuellitas"
            app:layout_constraintLeft_toRightOf="@+id/huella"
    />



    <TextView
            android:text="Para conocer ofertas, eventos, nuevos productos, ser paseador o publicar perritos, siguenos en nuestras redes sociales escríbenos a:
            adogtapp.services@gmail.com"
            android:layout_marginBottom="100dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            app:layout_constraintTop_toBottomOf="@id/textView2"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:id="@+id/textView"/>

    <TextView
            android:text="Contáctanos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:textSize="32sp"
            android:textColor="@color/white"
            android:id="@+id/textView2"
            app:layout_constraintHorizontal_bias="0.207"
            app:layout_constraintVertical_bias="1.0"/>

    <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/huella"
            app:layout_constraintTop_toBottomOf="@+id/instagram_imageButton"
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="8dp"

    />

    <TextView
            android:id="@+id/infoHuellitas"
            android:text="Huellitas de Acero A.C. Puerto Escondido
Coahuila (448,02 km)
70934 Municipio de Santa María Colotepec
 01 954 118 8978"
            android:textSize="15sp"
            android:textColor="@color/white"
            app:layout_constraintLeft_toRightOf="@+id/huella"
            app:layout_constraintTop_toTopOf="@+id/huella"
            android:layout_marginLeft="20dp"
            android:layout_width="175dp"
            android:layout_height="wrap_content"/>
</android.support.constraint.ConstraintLayout>