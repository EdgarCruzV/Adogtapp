<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             xmlns:app="http://schemas.android.com/apk/res-auto">
        <TextView
                android:id="@+id/nombre_comida_D"
                android:textSize="42sp"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                app:layout_constraintLeft_toRightOf="@+id/foto_comida_D"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent"/>
        <TextView
                android:id="@+id/cantidad_comida_D"
                android:textSize="25sp"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                app:layout_constraintLeft_toRightOf="@+id/foto_comida_D"
                app:layout_constraintTop_toBottomOf="@+id/nombre_comida_D"
        />
        <TextView
                android:id="@+id/marca_comida_D"
                android:textSize="25sp"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                app:layout_constraintLeft_toRightOf="@+id/foto_comida_D"
                app:layout_constraintTop_toBottomOf="@+id/cantidad_comida_D"
        />

        <TextView
                android:id="@+id/descripcion_comida_D"
                android:textSize="22sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:textAlignment="center"
                app:layout_constraintTop_toBottomOf="@+id/foto_comida_D"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                tools:layout_editor_absoluteX="0dp"
                app:layout_constraintVertical_bias="0.035"/>

        <TextView
                android:id="@+id/precio_comida_D"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:layout_marginLeft="8dp"
                app:layout_constraintLeft_toRightOf="@+id/foto_comida_D"
                app:layout_constraintTop_toBottomOf="@+id/marca_comida_D"

        />




        <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/foto_comida_D"
                android:layout_width="200dp"
                android:layout_height="200dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintLeft_toLeftOf="parent"
                android:padding="8dp"
                />
        <Button
                android:text="Agregar al carrito "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/buttonComida" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" android:layout_marginRight="8dp" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/foto_comida_D" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintVertical_bias="0.898"/>


</android.support.constraint.ConstraintLayout>